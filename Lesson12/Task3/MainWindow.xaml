        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800">
    <Grid Margin="0" RenderTransformOrigin="0.521,0.034" Width="728">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="278*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Start" HorizontalAlignment="Left" Margin="18,193,0,0" VerticalAlignment="Top" Width="200" Height="50" Click="Start_Click"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="46.6,193,0,0" VerticalAlignment="Top" Width="200" Height="50" Grid.Column="1" Click="Reset_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="299.6,193,0,0" VerticalAlignment="Top" Width="200" Height="50" Grid.Column="1" Click="Stop_Click"/>
        <Label x:Name="Seconds" HorizontalAlignment="Left" Margin="34.6,66,0,0" VerticalAlignment="Top" Height="60" Width="240" Content="0 мин 0 сек" FontSize="36" RenderTransformOrigin="0.608,-1.802" Grid.Column="1"/>

    </Grid>
</Window>
